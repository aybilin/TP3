<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AffichageFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- TextView pour afficher le nom -->
        <TextView
            android:id="@+id/textViewNom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nom: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- TextView pour afficher le prénom -->
        <TextView
            android:id="@+id/textViewPrenom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Prénom: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- TextView pour afficher la synthèse des données saisies -->
        <TextView
            android:id="@+id/textViewSynthese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synthèse des données saisies"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- TextView pour afficher les centres d'intérêt -->
        <TextView
            android:id="@+id/textViewCentresInteret"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Centres d'intérêt: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- TextView pour afficher la sélection de synchronisation -->
        <TextView
            android:id="@+id/textViewSync"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Synchronisation: "
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <!-- Bouton Valider -->
        <Button
            android:id="@+id/buttonValider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Valider"
            android:textSize="18sp"
            android:textStyle="bold"/>
        <Button
            android:id="@+id/buttonDownload"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Télécharger le fichier"
            android:layout_marginTop="16dp"
            android:onClick="downloadFile"/>


    </LinearLayout>

</FrameLayout>
